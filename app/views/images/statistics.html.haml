.page-header
  %h1
    = @image.caption
    %small Image Statistics

%h3 Visits this month:
#visits
  = render_chart @visits_chart, 'visits'
%h3 Visits by country:
#visits-by-country
  = render_chart @country_pie_chart, 'visits-by-country'
%h3 Visits by age:
#visits-by-age
  = render_chart @age_pie_chart, 'visits-by-age'
